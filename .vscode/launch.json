    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Run main.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/bsmu/vision/app/main.py",
            "console": "internalConsole",
            "args": [
                "--log-level=debug"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Python: Run build.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/build.py",
            "console": "internalConsole",
            "args": [
                "build"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        }
    ]
}
